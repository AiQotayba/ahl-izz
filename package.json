{
  "name": "ahlel-izz",
  "version": "1.0.0",
  "private": true,
  "description": "أهل العز لا ينسون - منصة التبرعات لدعم ريف حلب الجنوبي",
  "packageManager": "npm@10.0.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:seed": "cd apps/api && npm run db:seed",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm run install:types && npm run install:api && npm run install:web && npm run install:ui",
    "install:types": "cd packages/types && npm install",
    "install:api": "cd apps/api && npm install",
    "install:web": "cd apps/web && npm install",
    "install:ui": "cd packages/ui && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "prettier": "^3.0.0",
    "turbo": "^2.5.4",
    "typescript": "^5.2.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
